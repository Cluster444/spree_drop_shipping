<h1><%= (t('.editing_supplier') + " &ldquo;#{@supplier.title}&rdquo;").html_safe %></h1>

<% content_for :sidebar do %>

  <h3 class="name"><%= @supplier.title %><span class='sku'><%= (@supplier.posted_at || Time.now).strftime('%x') %></span></h3>
  <br clear="clear" />

  <ul class="sidebar supplier-menu">
    <%= hook :admin_supplier_tabs, {:current => current} do %>
      <li<%= ' class="active"'.html_safe if current == "Article Details" %>>
        <%= link_to t('.supplier_details'), edit_admin_supplier_url(@supplier) %>
      </li>   
    <% end %>
  </ul>
  <br clear="clear" />

<% end %>
